<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DA4D14"
    tools:context=".activity_ventana_login">

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:layout_margin="50dp"
        android:gravity="center_horizontal"
        />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:layout_below="@id/login"
        android:layout_margin="15dp"
        android:background="#30ffffff"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:padding="20dp"
        />

    <EditText
        android:id="@+id/contrase単a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contrase単a"
        android:layout_below="@id/usuario"
        android:layout_margin="15dp"
        android:background="#30ffffff"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:padding="20dp"
        android:inputType="textPassword"
        />

    <CheckBox
        android:id="@+id/mostrarContrasea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contrase単a"
        android:text="Mostrar Contrase単a"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:onClick="clickCheckBox"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_registrar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mostrarContrasea"
        android:text="INGRESAR"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/purple_500"
        android:onClick="clickValidar"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_crearCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_registrar"
        android:text="CREAR CUENTA"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/purple_500"
        android:onClick="clickCrear"/>

</RelativeLayout>